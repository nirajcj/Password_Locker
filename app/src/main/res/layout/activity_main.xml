<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".views.MainActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <requestFocus />

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@null"
                android:id="@+id/editText3"
                android:background="@xml/mytextbox1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textColor="#000000"
                android:layout_weight="1.0"
                android:ems="10"
                android:autofillHints="@string/editText3hint"
                android:hint="@string/editText3hint"
                android:inputType="text" />

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@null"
                android:id="@+id/editText1"
                android:textColor="#000000"
                android:background="@xml/mytextbox1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_weight="1.0"
                android:ems="10"
                android:autofillHints="@string/editText1hint"
                android:hint="@string/editText1hint"
                android:inputType="text" />

            <com.google.android.material.textfield.TextInputEditText
                android:textCursorDrawable="@null"
                android:id="@+id/editText2"
                android:background="@xml/mytextbox1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:padding="20dp"
                android:layout_weight="1.0"
                android:ems="10"
                android:autofillHints="@string/editText2hint"
                android:hint="@string/editText2hint"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.44"
            android:orientation="vertical" >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                android:background="@xml/button_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/update_string" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
